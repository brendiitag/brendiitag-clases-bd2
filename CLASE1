--este es un comentario de una sola linea
--DECLARE AQUI SE DECLARAN LAS VARIABLES PERO ES OPCIONAL

SET SERVEROUTPUT ON;
BEGIN --ESTE BLOQUE MARCA EL INICIO DE TU LOGICA DE PROGRAMACION NUNCA DEBE DE ESTAR VACIO
--NULL;
DBMS_OUTPUT.PUT_LINE('MI PRIMER PROGRAMA DE SQL');

--EXCEPTION ESTE BLOQUE ES OPCIONAL YA QUE NO TODOS NUESTROS CODIGOS LANZARAN EXCEPCIONES
END;
--/ LA SLASH SE USA SI QUIERES CORRER ESTE BLOQUE  DESDE LINEAS DE COMANDOS Y MARCA LA TERMIANCION DEL BLOQUE PL SQL  Y SU EJECUCUION



--otro programa en sql
DECLARE 
EDAD INTEGER;
EDAD_DIAS INTEGER;
BEGIN 
EDAD:=20;
EDAD_DIAS:=EDAD*165;
DBMS_OUTPUT.PUT_LINE('TU EDAD EN DIAS ES:'||EDAD_DIAS);
END;
/


CREATE TABLE HOLA(ID INTEGER,EDAD INTEGER,NOMBRE VARCHAR2(120));

BEGIN
FOR I IN 1..10 LOOP
DBMS_OUTPUT.PUT_LINE(I||'PRIMER CICLO');
INSERT INTO HOLA VALUES(I,20,'BRENDA');
END LOOP;
END;


SELECT*FROM HOLA;
